mixin catalog-card(options = {}, classCartBtn)

  .catalog-card&attributes(attributes)

    +link({href: options.hrefProduct, ariaLabel:"Переход в карточку товара"}).catalog-card__link

      +img(options.imageName, "png", 166, 156, "Товар магазина.")
      .catalog-card__title.title.title--small-line-big
        h3!= options.textTitle

    .catalog-card__container

      .catalog-card__product-code
        span Артитикул #[strong!= options.textCode]

      .catalog-card__data-add

        .catalog-card__price
          b!= options.textPrice

        .catalog-card__info
          i!= options.textInfo

      .catalog-card__buttons-wrapper

        +btn().catalog-card__order-btn.btn--base
          span Запрос в 1 клик

        +btn().btn--cart.catalog-card__cart-btn(class= classCartBtn)
          +icon("icon-cart", 18, 21)
          span В корзину

