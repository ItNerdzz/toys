mixin payment()
  -
    const options = [
      {
        text: 'Безналичный расчет',
        icon: 'payment-credit',
      },
      {
        text: 'Наличный расчет',
        icon: 'payment-cash',
      },
      {
        text: 'Отсрочка платежа',
        icon: 'payment-basket',
      },
      {
        text: 'Фиксирование стоимости при 50% предоплате',
        icon: 'payment-percent',
      },
    ];

  section.payment&attributes(attributes)
      .wrapper
        .payment__inner
          .title.title--medium.payment__title
            h2 Оплата

          .payment__cards
            each option in options
              .payment__card
                .payment__card-icon
                  +icon(option.icon, 65, 65)

                .text.text--big.payment__card-text
                  p!= option.text
