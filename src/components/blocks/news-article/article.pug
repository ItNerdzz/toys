mixin article()

  -
    const navNameItemSecondary = [
      {
        hrefLink: '#',
        textItem: 'Заголовок'
      },
      {
        hrefLink: '#',
        textItem: 'Заголовок'
      },
      {
        hrefLink: '#',
        textItem: 'Заголовок'
      },
    ];

  section.article&attributes(attributes)
    .wrapper
      .article__container

        .article__nav
          ul.article__nav-list
            li.article__nav-item
              +link({href: "#", ariaLabel:"Переход к разделу статьи."}).article__nav-link
