mixin vacancies()
  -
    const optionsItemAccordion = [
      {
        titlePro: 'Менеджер-кассир',
        detailsLocation: 'г. Волгоград',
        detailsWager: '50 000₽',
        textRequirements: 'Идейные соображения высшего порядка, а также постоянный количественный рост и сфера нашей активности играет важную роль в формировании систем массового участия.',
        timetable: 'Пн-пт 9:00-18:00, сб 9:00-15:00',
        linkPhone: 'tel:+74929999999',
        callbackContact: '+7 (492) 999-99-99, Светлана'
      },
      {
        titlePro: 'Менеджер-кассир',
        detailsLocation: 'г. Волгоград',
        detailsWager: '50 000₽',
        textRequirements: 'Идейные соображения высшего порядка, а также постоянный количественный рост и сфера нашей активности играет важную роль в формировании систем массового участия.',
        timetable: 'Пн-пт 9:00-18:00, сб 9:00-15:00',
        linkPhone: 'tel:+74929999999',
        callbackContact: '+7 (492) 999-99-99, Светлана'
      },
      {
        titlePro: 'Менеджер-кассир',
        detailsLocation: 'г. Волгоград',
        detailsWager: '50 000₽',
        textRequirements: 'Идейные соображения высшего порядка, а также постоянный количественный рост и сфера нашей активности играет важную роль в формировании систем массового участия.',
        timetable: 'Пн-пт 9:00-18:00, сб 9:00-15:00',
        linkPhone: 'tel:+74929999999',
        callbackContact: '+7 (492) 999-99-99, Светлана'
      },
    ];


  section.vacancies&attributes(attributes)
      .wrapper
        .vacancies__inner
          .vacancies__content
            .title.title--medium.vacancies__content-title
              h2 Вакансии в&nbsp;Саратовской области

            .vacancies__content-container

              .vacancies__navigation
                .vacancies__navigation-title
                  h3 Вакансии в филиалах

              ul.vacancies__accordion
                each option in optionsItemAccordion
                  li.accordion-item.vacancies__accordion-item

                    button.accordion-item__button(type="button")
                      .accordion-item__button-text
                        h3.accordion-item__title!= option.titlePro
                        P.accordion-item__details
                          span.accordion-item__details-location!= option.detailsLocation
                          span.accordion-item__details-wager!= option.detailsWager
                      .accordion-item__button-icon
                        +icon("tick", 22, 22)

                    .accordion-item__content-wrapper
                      .accordion-item__content

                        dl.accordion-item__specification
                          .accordion-item__specification-set
                            dt.accordion-item__term Требования
                            dd.accordion-item__definition!= option.textRequirements

                          .accordion-item__specification-set
                            dt.accordion-item__term График работы
                            dd.accordion-item__definition!= option.timetable

                          .accordion-item__specification-set
                            dt.accordion-item__term Контакты для&nbsp;собеседования
                            dd.accordion-item__definition
                              +link({href: option.linkPhone, text: option.callbackContact, ariaLabel: "Переход к звонку по телефону"}).accordion-item__definition-callback

          .vacancies__no-vacancies(style="display: none;")
            +icon("icon-partner", 104, 104)
            p На данный момент у нас нет свободных вакансий или предложений
